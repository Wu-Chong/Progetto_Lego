html
 head
  title LEGO
  link(rel='stylesheet', href='/css/style.css')
  meta(name="viewport" content="width=device-width, initial-scale=1")
 body
  header.header Ciaoneeeee
  div.container
   each giochi in costruzioni
     div.giochi
         div.giochi-image(style=`background: url('/images/${giochi.imgSrc}') top center no-repeat; background-size: cover;`)
